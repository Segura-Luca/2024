#include <iostream>
using namespace std;

int ContarVocales(string f);

int main() {
    string frase;
    cout << "Ingrese una frase: ";
    getline(cin, frase);

    int n = ContarVocales(frase);

    cout << "NÃºmero de vocales en la frase: " << n << endl;
    return 0;
}

int ContarVocales(string f) {
    int contador = 0;
    for (int i = 0; i < f.length(); i++) {
        if (f[i] == 'a' || f[i] == 'e' || f[i] == 'i' || f[i] == 'o' || f[i] == 'u' ||
            f[i] == 'A' || f[i] == 'E' || f[i] == 'I' || f[i] == 'O' || f[i] == 'U') {
            contador++;
        }
    }
    return contador;
}
